IF
	!Gender(Myself,3) // the mephit has not been gated
	!GlobalTimerNotExpired("RR#Cast","LOCALS")
	!GlobalTimerNotExpired("RR#Gate","LOCALS")
        Global("RR#MNOGT","GLOBAL",0) // gating is allowed
        OR(3)
          RandomNum(7,1)
	  HPPercentLT(Myself,31)
	  !See([GOODCUTOFF])
THEN
	RESPONSE #25
		SetGlobalTimer("RR#Cast","LOCALS",8)
		SetGlobalTimer("RR#Gate","LOCALS",300) // a gate can be opened only once per hour
                DisplayStringHead(Myself,@1800) // attempts to open an interplanar gate
		ForceSpellRES("RR#MRAGT",Myself) // Gate (Radiant Mephit version)
	RESPONSE #75
		SetGlobalTimer("RR#Cast","LOCALS",8)
		SetGlobalTimer("RR#Gate","LOCALS",300) // a gate can be opened only once per hour
                DisplayStringHead(Myself,@1801) // fails to open an interplanar gate
		SpellNoDec(Myself,DO_NOTHING)
END

IF
	!GlobalTimerNotExpired("RR#Cast","LOCALS")
	Global("RR#Cspr","LOCALS",0) // 1x per turn
	Range([GOODCUTOFF.HUMANOID],8)
	See([GOODCUTOFF.HUMANOID]) // prioritize humanoids
	!Race(LastSeenBy(Myself),ELF)
	CheckStatLT(LastSeenBy(Myself),7,LEVEL) // low level characters (unconsciousness)
	CheckStatLT(LastSeenBy(Myself),7,LEVEL2)
	CheckStatLT(LastSeenBy(Myself),7,LEVEL3)
	!StateCheck(LastSeenBy(Myself),STATE_DISABLED)
	!StateCheck(LastSeenBy(Myself),STATE_BLIND) // don't target blinded characters with Color Spray
	CheckStatGT(LastSeenBy(Myself),0,SAVEVSSPELL)
	CheckStatLT(LastSeenBy(Myself),50,RESISTMAGIC)
	CheckStat(LastSeenBy(Myself),0,MINORGLOBE)
	!CheckStat(LastSeenBy(Myself),8,WIZARD_SPELL_IMMUNITY) // Spell Immunity: Alteration
	!HasItemEquiped("MORSWORD",LastSeenBy(Myself)) // Mordenkainen's Sword
	!HasItemEquiped("MISC73",LastSeenBy(Myself)) // The Horn of Kazgaroth
	OR(2)
	  !Range([EVILCUTOFF],8) // try to avoid hitting allies
	  HasItemEquiped("RR#MRAW1",[EVILCUTOFF]) // Radiant Mephit
THEN
	RESPONSE #100
		SetGlobalTimer("RR#Cast","LOCALS",8)
                IncrementGlobal("RR#Cspr","LOCALS",1)
		ForceSpellRES("RR#MRACS",LastSeenBy(Myself)) // Color Spray
END

