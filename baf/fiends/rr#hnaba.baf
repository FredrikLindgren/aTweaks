IF
	!GlobalTimerNotExpired("RR#Rest","LOCALS") // re-initialize the rest timer
THEN
	RESPONSE #100
		SetGlobalTimer("RR#Rest","LOCALS",2400) // 8 hours
                SetGlobal("RR#DNETH","LOCALS",0) // reset Etherealness variable
                SetGlobal("RR#DGaze","LOCALS",0) // reset Death Gaze variable
